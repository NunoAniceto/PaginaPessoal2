@{
    ViewData["Title"] = "Home Page";
}

<header class="masthead text-center p-5 mb-2">
    <div class="masthead-content">
        <div class="container">
            <h1 class="display-3 p-5 mb-0">Nuno Aniceto</h1>
            <h2 class="display-3 p-1 mb-0">Página Pessoal</h2>


        </div>
    </div>

</header>

<div class="row">
    <div class=" col-md-3 col-sm-6 p-2">
        <a asp-controller="Home" asp-action="DadosPessoais">
            <img src="~/img/nuno.jpg"
                 alt="Foto Nuno"
                 title="Dados Pessoais"
                 style="width:250px; height:260px"
                 class="rounded-circle img-fluid" />
        </a>
    </div>

    <div class=" col-md-3 col-sm-6 p-2">
        <a href="habilitacoes.html">
            <img src="~/img/habilitacoes.jpg"
                 alt="Habilitações"
                 title="Habilitações"
                 style="width:250px; height:260px"
                 class="rounded-circle img-fluid" />
        </a>
    </div>

    <div class=" col-md-3 col-sm-6 p-2">
        <a asp-controller="Experiencias" asp-action="Index">
            <img src="~/img/experiencia.jpg"
                 alt="Experiência"
                 title="Experiência"
                 style="width:250px; height:260px"
                 class="rounded-circle img-fluid" />
        </a>
    </div>

</div>


