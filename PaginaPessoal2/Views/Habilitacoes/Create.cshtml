@model PaginaPessoal2.Models.Habilitacoes

@{
    ViewData["Title"] = "Create";
}

<header class="masthead text-center p-5">
    <div class="masthead-content">
        <div class="container">
            <h1 class="display-4 p-5 mb-0">Criar</h1>
            <h2 class="display-4 p-0 mb-0">Habilitações</h2>


        </div>
    </div>

</header>

<section>
    <div class="container p-5">

        <article>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Ano" class="control-label"></label>
                            <input asp-for="Ano" class="form-control" />
                            <span asp-validation-for="Ano" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Curso" class="control-label"></label>
                            <input asp-for="Curso" class="form-control" />
                            <span asp-validation-for="Curso" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Instituicao" class="control-label"></label>
                            <input asp-for="Instituicao" class="form-control" />
                            <span asp-validation-for="Instituicao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>


        </article>

    </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
