@model Habilitacoes

@{
    ViewData["Title"] = "Edit";
}


<header class="masthead text-center p-5">
    <div class="masthead-content">
        <div class="container">
            <h1 class="display-4 p-5 mb-0">Editar</h1>
            <h2 class="display-4 p-0 mb-0">Habilitações</h2>


        </div>
    </div>

</header>

<section>
    <div class="container p-5">

        <article>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="HabilitacoesId" />
                        <div class="form-group">
                            <label asp-for="Ano" class="control-label"></label>
                            <input asp-for="Ano" class="form-control" />
                            <span asp-validation-for="Ano" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Curso" class="control-label"></label>
                            <input asp-for="Curso" class="form-control" />
                            <span asp-validation-for="Curso" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Instituicao" class="control-label"></label>
                            <input asp-for="Instituicao" class="form-control" />
                            <span asp-validation-for="Instituicao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="ficheiroFoto" class="control-label">Fotografia (especifique apenas caso queira alterar)</label>
                            <input name="ficheiroFoto" class="form-control-file" type="file" />
                        </div>
                        <div class="form-group">
                            <input asp-for="Foto" type="hidden" />
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    @if (Model.Foto != null)
                    {
                        <img src="data:image/jpeg;base64, @Convert.ToBase64String(Model.Foto)" class="img-fluid" />
                    }
                </div>
            </div>

        </article>

    </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
