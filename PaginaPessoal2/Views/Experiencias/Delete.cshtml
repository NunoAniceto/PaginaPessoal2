@model Experiencia

@{
    ViewData["Title"] = "Delete";
}

<header class="masthead text-center p-5">
    <div class="masthead-content">
        <div class="container">
            <h1 class="display-4 p-5 mb-0">Apagar</h1>
            <h2 class="display-4 p-0 mb-0">Tem a certeza que deseja apagar esta experiência?</h2>


        </div>
    </div>

</header>

<section>
    <div class="container p-5">

        <article>

            <div>

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Ano)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Ano)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Empresa)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Empresa)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cargo)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cargo)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="ExperienciaId" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </article>

    </div>

</section>