@model IEnumerable<Experiencia>

@{
    ViewData["Title"] = "Index";
}


<header class="masthead text-center p-5">
    <div class="masthead-content">
        <div class="container">
            <h1 class="display-4 p-5 mb-0">Nuno Aniceto</h1>
            <h2 class="display-3 p-0 mb-0">Experiência</h2>


        </div>
    </div>

</header>

<section>
    <div class="container p-5">

        <article>

            <p>
                <a asp-action="Create" class="btn btn-success">Nova Experiência</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Ano)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Empresa)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cargo)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ano)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Empresa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cargo)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ExperienciaId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.ExperienciaId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.ExperienciaId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </article>

    </div>

</section>